# =============================================================================
# Infra-Mapper Agent - Configuration
# =============================================================================
# Copy this file to .env before starting the agent
# =============================================================================

# Backend URL (required)
# Use the Tailscale IP or public IP of the Infra-Mapper server
MAPPER_BACKEND_URL=http://your-server-ip:8080

# API Key for authentication (must match backend MAPPER_API_KEY)
MAPPER_API_KEY=your-secure-api-key-here

# =============================================================================
# SCAN SETTINGS
# =============================================================================
# Interval between scans in seconds
# Recommended: 90 for tcpdump mode, 30 for basic mode
MAPPER_SCAN_INTERVAL=90

# Log level: DEBUG, INFO, WARNING, ERROR
MAPPER_LOG_LEVEL=INFO

# =============================================================================
# NETWORK DISCOVERY
# =============================================================================
# Enable Tailscale integration
MAPPER_TAILSCALE_ENABLED=true

# Enable tcpdump for network traffic analysis
MAPPER_TCPDUMP_ENABLED=true

# Tcpdump mode: "intermittent" (30s capture) or "continuous"
MAPPER_TCPDUMP_MODE=intermittent

# =============================================================================
# CONTAINER LOGS
# =============================================================================
# Collect container logs
MAPPER_COLLECT_LOGS=true

# Number of log lines to collect per container
MAPPER_LOGS_LINES=100

# Only collect logs from the last N seconds
MAPPER_LOGS_SINCE_SECONDS=60
